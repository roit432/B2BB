<% layout("/layouts/boilerplate.ejs") %>

<body>
     <style>
      #filters{
        
        display: flex;
        margin: 2px;
        align-items: center;
        
        
      }
      .filter{
        text-align:center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }
      .filter p{
        font-size: 0.8rem;
      }
      .tex-info{
        display:none;
      }
      .tag-toggle{
        border: 2px solid black;
        border-radius: 1rem;
        height:3.5rem;
        padding:1rem;
        margin-left: 5rem;
        display:flex;
        align-items: center;
        
      }
     </style>
    <div id="filters">
      <div class="filter">
       <div> <i class="fa-solid fa-fire"></i></div>
       <p> Trending</p>
      </div>
      <div class="filter">
        <div> <i class="fa-solid fa-bed"></i></div>
        <p> Rooms</p>
       </div>
       <div class="filter">
        <div> <i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic City</p>
       </div>
       <div class="filter">
        <div> <i class="fa-solid fa-mountain"></i></div>
        <p>Mountain</p>
       </div>
       <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Archit</p>
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Doms</p>
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Igloo</p>
       </div>
      <div class="tag-toggle ">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Total afetr Taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3"><!--here we set the image max 3 images will show in tab-->
      <%  for(let listing of allListings)  {%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card"  >
            <img src="<%=listing.image.url%>" 
            class="card-img-top" alt="listing_image" style="height: 20rem;"><!--for show images in tab -->
            <div class="card-img-overlay"></div><!--this div use for to  the  write the text over images-->
            <div class="card-body">
              <p class="card-text">
                <b><%=listing.title%></b>
                <br>
                &#8377;<%=listing.price%>/night
                <i class="tex-info">+18%GST</i>
              </p>
            </div>
          </div>
        </a>
       
      <%}%>
    
    </div>
    <script>
      let togglepanel=document.getElementById("flexSwitchCheckDefault");
      togglepanel.addEventListener("click",()=>{
        console.log("clicked");
        let taxInfo=document.getElementsByClassName("tex-info");
        for(info of taxInfo){
          if(info.style.display!="inline"){ //if the style info is not inline then it set to the inline
            info.style.display="inline";

          }else{
            info.style.display="none";
          }
         
        }
      })
    </script>
    
   

</ul>
</body>
